[Unit]
Description=NuCypher Node
[Service]
User=root
Type=simple
Environment=NUCYPHER_WORKER_ETH_PASSWORD={{ NUCYPHER_WORKER_ETH_PASSWORD }}
Environment=NUCYPHER_KEYRING_PASSWORD={{ NUCYPHER_KEYRING_PASSWORD }}
ExecStart=/usr/local/bin/nucypher ursula run --prometheus --metrics-port 9100
Restart=always
RestartSec=3
[Install]
WantedBy=multi-user.target
